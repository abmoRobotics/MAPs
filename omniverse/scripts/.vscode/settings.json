        "~/.local/share/ov/pkg/isaac_sim-2022.2.0/kit/extscore/omni.kit.pip_archive/pip_prebundle",
        "~/.local/share/ov/pkg/isaac_sim-2022.2.0/kit/kernel/py",
        "~/.local/share/ov/pkg/isaac_sim-2022.2.0/kit/plugins/bindings-python",
        "~/.local/share/ov/pkg/isaac_sim-2022.2.0/kit/extscore/omni.ui",
        "~/.local/share/ov/pkg/isaac_sim-2022.2.0/kit/exts/omni.graph.core",
        "~/.local/share/ov/pkg/isaac_sim-2022.2.0/kit/extscore/omni.usd",
        "~/.local/share/ov/pkg/isaac_sim-2022.2.0/kit/extscore/omni.kit.commands",
        "~/.local/share/ov/pkg/isaac_sim-2022.2.0/kit/exts/omni.hydra.pxr.settings",
        "~/.local/share/ov/pkg/isaac_sim-2022.2.0/kit/kit/exts/omni.kit.viewport.pxr",
        "~/.local/share/ov/pkg/isaac_sim-2022.2.0/kit/kit/extscore/omni.hydra.pxr",
